<h1>
    My Shopping Cart
</h1>

<form action="" method="post">
    <br><br>
    <input type="number" min="1" max="10" name="ups_account" placeholder="Your UPS Account">
    <input type="number" name="x_dest" placeholder="Your address x">
    <input type="number" name="y_dest" placeholder="Your address y">
    <input type="submit" name="submit" value="Purchase"/>
    <ul class="product-list">
        {{#each myOrders}}
            <li> 
                <p style="font-size:30px">{{this.item_name}}</p>
                <p style="font-size:20px"> Count: {{this.count}} </p>
                <p style="font-size:20px"> Price: {{this.order_price}} </p>
                <input type="checkbox" name="selectedItem" value='{{this.order_id}}'>
                <br><br>
            </li>
        {{/each}}
    </ul>

</form>